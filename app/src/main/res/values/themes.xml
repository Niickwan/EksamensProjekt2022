<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EksamensProjekt2022" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/darkblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/darkblue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.EksamensProjekt2022.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EksamensProjekt2022.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.EksamensProjekt2022.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Edittext focus color -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="TextInputLayoutBottomLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- Scrollbars -->
    <style name="ViewWithScrollbars">
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Splashscreen -->
    <style name="Splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkblue</item>

    </style>

</resources>